ACTION_IF !VARIABLE_IS_SET ZS_MARKER_FILE_EXISTS BEGIN
    OUTER_SET ZS_MARKER_FILE_EXISTS = FILE_EXISTS_IN_GAME "ZSSETUP.RP"
END

ACTION_IF !VARIABLE_IS_SET ~zs_prefixes~ AND NOT ZS_MARKER_FILE_EXISTS BEGIN


    ACTION_IF is_iwdee BEGIN

        ACTION_IF NOT has_eefixpack BEGIN

            PRINT ~[[FIX]]: Fixing broken BONECIR.spl~
            COPY_EXISTING ~#BONECIR.spl~ ~override~
                WRITE_ASCII 0x0 "SPL " (4)

        END

    END

    ACTION_IF is_bg2ee_or_eet BEGIN

        ACTION_IF NOT has_eefixpack BEGIN

            PRINT "[[FIX]]: Fixing incorrect speed factor in Lilarcor from 8 to 7"
            COPY_EXISTING ~SW2H14.ITM~ ~override~
                LPF ALTER_HEADER INT_VAR silent = 1 match_type = 1 speed = 7 END
                READ_STRREF 0x54 desc
                SPRINT str_sf @99998
                INNER_PATCH_SAVE new_description ~%new_description%~ BEGIN
                    REPLACE_TEXTUALLY ~\([%LNL%%MNL%%WNL%]+[ %TAB%]*%str_sf%[ %TAB%]*:?[ %TAB%]*\)8~ ~\17~
                END
                SAY_EVALUATED 0x54 ~%desc%~

            PRINT ~[[FIX]]: Non-standard scimitar/wakizashi/ninjato animations~
            COPY_EXISTING ~misc9q.itm~ ~override~
                WRITE_ASCII 0x22 "SC" #2

            COPY_EXISTING ~sw1h66.itm~ ~override~
                WRITE_ASCII 0x22 "SS" #2

            COPY_EXISTING ~sw1h67.itm~ ~override~
                WRITE_ASCII 0x22 "S1" #2

            COPY_EXISTING ~sw1h68a.itm~ ~override~
                WRITE_ASCII 0x22 "SC" #2

            PRINT "[[FIX]]: Fixes for misaligned indexes in Quarterstaff and Dwarven Thrower"
            COPY_EXISTING ~hamm06.itm~ ~override~
                          ~staf01.itm~ ~override~
                LPF FJ_SPL_ITM_REINDEX END

            COPY_EXISTING ~DAGG24.itm~ ~override~
                LPF ITM_WEIGHT RET result END
                PATCH_IF result = 0 BEGIN
                    PATCH_PRINT "[[FIX]]: Fixing DAGG24.itm (Dagger +3) weight from 0 to 1"
                    LPF ALTER_ITEM INT_VAR weight = 1 END
                    SPRINT str @99990
                    READ_STRREF 0x54 desc
                    INNER_PATCH_SAVE desc ~%desc%~ BEGIN
                        REPLACE_TEXTUALLY ~\([%LNL%%MNL%%WNL%]+[ %TAB%]*%str%[ %TAB%]*:?[ %TAB%]*\)[0-9]~ ~\11~
                    END
                    SAY_EVALUATED 0x54 ~%desc%~
                END

            PRINT "[[FIX]]: Fixing SHAKTI1.itm (Dagger +3) speed factor from 1 to 0"
            COPY_EXISTING ~SHAKTI1.itm~ ~override~
                LPF ALTER_HEADER INT_VAR speed = 0 END

            COPY_EXISTING ~MISC4Q.itm~ ~override~
            LPF WPN_DICENUM RET dicenum = result END
            LPF WPN_DICESIZE RET dicesize = result END
            PATCH_IF dicesize = 4 AND dicenum = 2 BEGIN
                PATCH_PRINT "[[FIX]]: Fixing MISC4Q.itm (The Ogre's Sword) so it uses bastard sword proficiency"
                LPF ALTER_ITEM INT_VAR lore = 0 wpn_prof = 89 END
                LPF ALTER_HEADER INT_VAR silent = 1 dicesize = 8 dicenumber = 1 END
                SPRINT str @99980
                SPRINT ls_str @99981
                SPRINT bs_str @99982
                READ_STRREF 0x50 desc
                INNER_PATCH_SAVE desc ~%desc%~ BEGIN
                    REPLACE_TEXTUALLY ~\([%LNL%%MNL%%WNL%]+[ %TAB%]*%str%[ %TAB%]*:?[ %TAB%]*\)%ls_str%~ ~\1%bs_str%~
                END
                SAY_EVALUATED 0x50 ~%desc%~
            END

            PRINT "[[FIX]]: SW1H28.itm (Cutthroat +4) so it has a speed factor of 0"
            COPY_EXISTING "SW1H28.itm" ~override~
                LPF ALTER_HEADER INT_VAR speed = 0 END
                READ_STRREF 0x54 desc
                SPRINT str_sf @99998
                INNER_PATCH_SAVE desc ~%desc%~ BEGIN
                    REPLACE_TEXTUALLY ~\([%LNL%%MNL%%WNL%]+[ %TAB%]*%str_sf%[ %TAB%]*:?[ %TAB%]*\)[0-9]~ ~\10~
                END
                SAY_EVALUATED 0x54 ~%desc%~

        END

        PRINT "[[FIX]]: Standardizing Golem Juggernaut to Stone Golem class"
        COPY_EXISTING ~TOMEGOL4.CRE~ ~override~
            WRITE_BYTE 0x273 class_golem_stone

        PRINT "[[FIX]]: Making Greater Clay Golem a Clay Golem class instead of Iron"
        COPY_EXISTING ~ohbgol01.cre~ ~override~
            WRITE_BYTE 0x273 class_golem_clay

        PRINT "[[FIX]]: Aesgareth enemies he fights during the card game being considered 'weapon' instead of 'humanoid', and a couple of others"
        COPY_EXISTING ~gordeck1.cre~ ~override~
                      ~gordeck2.cre~ ~override~
                      ~gordeck3.cre~ ~override~
                      ~gordeck4.cre~ ~override~
                      ~ohnavrum.cre~ ~override~
            PATCH_IF BYTE_AT(0x271) = general_weapon BEGIN
                WRITE_BYTE 0x271 general_humanoid
            END
        BUT_ONLY

        ACTION_IF NOT has_eefixpack BEGIN // proficiency issues
            PRINT "[[FIX]]: Thieves using bastard swords in BG2EE without being able to use them properly or illegally as per the rules of thieves. Replaced with short swords."
            COPY_EXISTING ~ARNTRA06.CRE~ ~override~
                        ~BMUGG1.CRE~   ~override~
                        ~GENTHF01.CRE~ ~override~
                        ~PIRPIR05.CRE~ ~override~
                LPF IS_WEAPON_EQUIPPED INT_VAR at_slot = 1 STR_VAR weapon = ~sw1h01~ RET found END
                PATCH_IF found BEGIN
                    REPLACE_CRE_ITEM ~SW1H07~ #0 #0 #0 ~none~ ~weapon1~ EQUIP
                END

            PRINT "[[FIX]]: Cambions that are set as 'thieves' wielding bastard swords without proficiency for it. Adding large sword proficiency 1 to them"
            COPY_EXISTING ~CAMBION1.CRE~ ~override~
                        ~TELCAM1.CRE~  ~override~
                PATCH_IF BYTE_AT(0x6e) = 0 BEGIN // if they have no proficiency in large swords
                    WRITE_BYTE 0x6f 1 // add one pip to large sword proficiency
                END

            PRINT "[[FIX]]: Thieves using daggers without being proficient in them. Adding one pip to proficiency in daggers for them"
            COPY_EXISTING ~AR18THIF.CRE~ ~override~
                        ~ARNMAN09.CRE~ ~override~
                        ~BEELOO.CRE~   ~override~
                        ~BSHOP01.CRE~  ~override~
                        ~DRIM01.CRE~   ~override~
                        ~GENTH02.CRE~  ~override~
                        ~GENTMG01.CRE~ ~override~
                        ~SHTH05.CRE~   ~override~
                LPF DELETE_EFFECT INT_VAR silent = 1 match_pcode = 233 match_parameter1 = 1 match_parameter2 = 96 END
                LPF ADD_CRE_EFFECT INT_VAR opcode = 233 parameter1 = 1 parameter2 = 96 timing=9 target=1 END

            PRINT "[[FIX]]: Thieves using short swords without being proficient in them. Adding one pip to proficiency in short swords for them"
            COPY_EXISTING ~DSHOP01.CRE~ ~override~
                        ~GENTH01.CRE~  ~override~
                        ~GPTHIEF1.CRE~ ~override~
                        ~IRETHF03.CRE~ ~override~
                        ~ISHCLO01.CRE~ ~override~
                        ~ISHTHF01.CRE~ ~override~
                        ~PARTHF.CRE~   ~override~
                        ~UDDOOR08.CRE~ ~override~
                        ~UDDOOR09.CRE~ ~override~
                        ~WAYLANE.CRE~  ~override~
                        ~SARTHF01.CRE~ ~override~
                        ~IRETHF04.CRE~ ~override~
                        ~ISHTHF03.CRE~ ~override~
                LPF DELETE_EFFECT INT_VAR silent = 1 match_pcode = 233 match_parameter1 = 1 match_parameter2 = 91 END
                LPF ADD_CRE_EFFECT INT_VAR opcode = 233 parameter1 = 1 parameter2 = 91 timing=9 target=1 END

            PRINT "[[FIX]]: Thieves using a long swords without being proficient in them. Adding one pip to proficiency in long swords"
            COPY_EXISTING ~ARNTRA01.CRE~ ~override~
                        ~DASSIN.CRE~    ~override~
                        ~ARNFGT03.CRE~  ~override~
                        ~ARNMAN10.CRE~  ~override~
                        ~ARNMAN11.CRE~  ~override~
                        ~ARNTRA01.CRE~  ~override~
                        ~ARNTRA03.CRE~  ~override~
                        ~ARNTRA05.CRE~  ~override~
                        ~ARNWAR01.CRE~  ~override~
                        ~FLYFGT02.CRE~  ~override~
                        ~FLYFGT03.CRE~  ~override~
                        ~SHADTH01.CRE~  ~override~
                        ~SHADTH02.CRE~  ~override~
                        ~STGUARD1.CRE~ ~override~
                        ~STGUARD2.CRE~ ~override~
                        ~STGUARD3.CRE~ ~override~
                        ~THIEF4.CRE~    ~override~
                LPF DELETE_EFFECT INT_VAR silent = 1 match_pcode = 233 match_parameter1 = 1 match_parameter2 = 90 END
                LPF ADD_CRE_EFFECT INT_VAR opcode = 233 parameter1 = 1 parameter2 = 90 timing=9 target=1 END


            PRINT "[[FIX]]: Yuan-ti using long swords without being proficient in them. Setting proficiencies to large swords to 3, as seemingly intended"
            COPY_EXISTING ~icyuan01.CRE~ ~override~
                WRITE_BYTE 0x6e 3
                
        END

        PRINT "[[FIX]]: Minotaurs being set to the Ogre/gnoll race instead of Minotaurs"
        COPY_EXISTING ~icmin01.CRE~ ~override~
                      ~amminot.CRE~ ~override~
                      ~ohbmin01.CRE~ ~override~
                      ~ohbminsu.CRE~ ~override~
                      ~garock.CRE~ ~override~
                      ~hlmafer.CRE~ ~override~
                      ~ohnghall.CRE~ ~override~
                      ~rock.CRE~ ~override~
                      ~slandor.CRE~ ~override~
            WRITE_BYTE 0x272 race_minotaur

        PRINT "[[FIX]]: Setting green dragons to have actually the race of green dragon"
        COPY_EXISTING ~bazdra03.CRE~ ~override~
                      ~fsdragon.CRE~ ~override~
            WRITE_BYTE 0x273 class_green_dragon

    END

    ACTION_IF NOT has_eefixpack BEGIN

        PRINT "[[FIX]]: Setting water elementals to their proper class of elemental of water instead of nothing"
        COPY_EXISTING ~ohbwat01.CRE~ ~override~
                    ~bdwe1str.CRE~ ~override~
                    ~bdwe2str.CRE~ ~override~
