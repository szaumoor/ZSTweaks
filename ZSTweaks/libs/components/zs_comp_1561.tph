

ACTION_IF is_bg2ee_or_eet BEGIN

  COPY_EXISTING "clck25.itm" ~override~
    LPF ALTER_ITEM INT_VAR id_desc=RESOLVE_STR_REF(@6820) END
    LPF ALTER_EFFECT INT_VAR check_globals = 0 match_opcode = 255 parameter1 = 30 END
    SET proficiency = (1 << 16) | 106
    LPF ADD_EQUIPPED_EFF STR_VAR effects =~op=233,p1=1,p2=%proficiency%;op=37,p1=2~ END

END
