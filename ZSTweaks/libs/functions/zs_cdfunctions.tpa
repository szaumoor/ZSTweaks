          match_resource_ex      = ~(("%match_resource%" STRING_COMPARE_CASE "%o_resource%" = 0) OR ("%match_resource%" STRING_COMPARE_CASE "SAME" = 0))~

  // stringvariables for the new effect
          opcode_ex              = "SAME"
          target_ex              = "SAME"
          power_ex               = "SAME"
          parameter1_ex          = "SAME"
          parameter2_ex          = "SAME"
          timing_ex              = "SAME"
          resist_dispel_ex       = "SAME"
          duration_ex            = "SAME"
          probability1_ex        = "SAME"
